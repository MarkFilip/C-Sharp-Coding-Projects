@model NFLStats.Models.Team

@{
    ViewBag.Title = "Details";
}


<div>
	<h2>@Html.DisplayFor(model => model.Location) @Html.DisplayFor(model => model.Name)</h2>
    <hr />
	<dl class="dl-horizontal">
		<dt>
			@Html.DisplayNameFor(model => model.Conference)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Conference)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Division)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Division)
		</dd>

	</dl>
	<hr />
	<h2>Players</h2>
	<dl class="dl-horizontal">
		<dd>
			<table class="table">
				<tr>
					<th></th>
					<th>First Name</th>
					<th>Last Name</th>
					<th>Position</th>
					<th>Jersey Number</th>
				</tr>
				@foreach (var item in Model.Players)
				{
					<tr>
						<td>
							<img src="@item.Picture" />
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.FirstName)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.LastName)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Position)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.JerseyNumber)
						</td>
					</tr>
				}
			</table>
		</dd>

	</dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
